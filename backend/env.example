# Пример конфигурации для Pacific.ai Vector Matching Module
# Скопируйте этот файл в .env и заполните реальными значениями

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Pinecone Vector DB (выберите один из вариантов)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=pacific-ai-vectors

# Supabase Vector (альтернатива Pinecone)
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here
SUPABASE_TABLE=embeddings

# PostgreSQL для метаданных
DATABASE_URL=postgresql://user:password@localhost:5432/pacific_ai

# Настройки API
API_HOST=0.0.0.0
API_PORT=8001
API_DEBUG=True

# CORS настройки для Next.js
CORS_ORIGINS=["http://localhost:3000", "https://pacific.ai", "https://www.pacific.ai"]

# Безопасность (опционально)
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
